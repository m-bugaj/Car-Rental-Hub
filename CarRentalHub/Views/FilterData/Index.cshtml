@model IEnumerable<CarRentalHub.Models.FilterData>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<styles>
    body {
    margin: 0;
    font-family: Arial, sans-serif;
    }

    .overlay {
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8);
    top: 0;
    left: 0;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    }

    .loader {
    border: 8px solid #f3f3f3;
    border-top: 8px solid #3498db;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite;
    }

    @@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
    }

    /* Dodaj dodatkowe style dla reszty strony */
    .content {
    /* Dodaj odpowiednie style dla reszty zawartości strony */
    }

</styles>

<!-- Dodaj overlay i animację ładowania -->
<div id="overlay" class="overlay">
    <div class="loader"></div>
</div>

<script>
    // Funkcja do pokazania overlaya z animacją ładowania
function showLoader() {
    document.getElementById('overlay').style.display = 'flex';
}

// Funkcja do ukrycia overlaya po zakończeniu ładowania
function hideLoader() {
    document.getElementById('overlay').style.display = 'none';
}

// Wywołaj funkcję showLoader() przed przekierowaniem
showLoader();

// Wywołaj funkcję hideLoader() po załadowaniu strony
window.onload = function() {
    hideLoader();
};

</script>


