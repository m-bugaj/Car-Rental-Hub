<script>
    // Funkcja sprawdzająca i aktualizująca wysokość .header-gradient
    function updateHeaderGradientHeight() {
        var headerGradient = document.querySelector('.header-gradient');
        var headerShape = document.querySelector('.header-shape')

        if (window.innerWidth < 768) {
            headerGradient.style.height = '100%';
            headerShape.style.transform = 'translateY(200%)';
        } 
        else if (window.innerWidth < 1700) {
            headerGradient.style.height = '94%';
        }
        else {
            headerGradient.style.height = '90%';
        }
    }

    function updateHeroSection() {
        var heroSection = document.querySelector('.hero-section');

        if (window.innerWidth < 768) {
            heroSection.style.marginTop = '-230px';
        }
        else if (window.innerWidth < 1700) {
            heroSection.style.marginTop = '-175px';
        }
        // else {
        //     heroSection.style.margin - top = '90%';
        // }
    }

    // Wywołaj funkcję po załadowaniu strony
    document.addEventListener('DOMContentLoaded', function () {
        // Wywołaj funkcję na starcie
        updateHeaderGradientHeight();
        updateHeroSection();

        // Dodaj nasłuchiwanie na zmiany rozmiaru okna
        window.addEventListener('resize', function () {
            // Ponownie wywołaj funkcję przy zmianie rozmiaru okna
            updateHeaderGradientHeight();
            updateHeroSection();
        });
    });
</script>


<style>
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .hero-section {
        background: linear-gradient(to bottom, #3498db, #2980b9);
        color: #fff;
        padding: 50px 10px;
        border-radius: 20px;
        margin-top: -140px;
        margin-bottom: 20px;
        margin-left: 30px;
        margin-right: 30px;
        text-align: center;
        position: relative; /* Dodaj pozycję względną do sekcji hero-section */
        transform: scale(0.8);
    }

    .custom-button {
        font-size: 1.3rem;
        font-weight: 300;
        padding: 12px 25px;
        background-color: #1a1a1a;
        color: #ffffff;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

